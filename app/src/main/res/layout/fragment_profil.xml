<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.fragment_profil">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingStart="16dp"
       android:paddingEnd="16dp"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:textSize="24sp"
                   android:text="Trian Damai"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   android:text="EDIT"
                   android:textColor="@color/hijau"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:text="+6281226809435 . trian@gmail.com"/>

           </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="50dp"
               android:paddingStart="16dp"
               android:paddingEnd="16dp"
               android:orientation="vertical">
               <LinearLayout
                   android:id="@+id/ly_btn_myorder"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="15dp"
                   android:layout_marginTop="15dp"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="20dp"
                       android:src="@drawable/ic_profil_myorder"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Pesananku"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:background="#6F6F6F"
                   android:layout_height="1dp"/>
               <LinearLayout
                   android:id="@+id/ly_btn_manage_address"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:gravity="center_vertical"
                   android:layout_marginBottom="15dp"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="20dp"
                       android:src="@drawable/ic_profil_adress"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Atur Alamat"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:background="#6F6F6F"
                   android:layout_height="1dp"/>
               <LinearLayout
                   android:id="@+id/ly_btn_iderpay"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:gravity="center_vertical"
                   android:layout_marginBottom="15dp"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="20dp"
                       android:src="@drawable/ic_profil_ider_pay"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="IderPay"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:background="#6F6F6F"
                   android:layout_height="1dp"/>
               <LinearLayout
                   android:id="@+id/ly_btn_help"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:gravity="center_vertical"
                   android:layout_marginBottom="15dp"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="20dp"
                       android:src="@drawable/ic_profil_help"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Bantuan"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:background="#6F6F6F"
                   android:layout_height="1dp"/>
               <LinearLayout
                   android:id="@+id/ly_btn_logout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:gravity="center_vertical"
                   android:layout_marginBottom="15dp"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="20dp"
                       android:src="@drawable/ic_profil_logout"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:text="Keluar"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:background="#6F6F6F"
                   android:layout_height="1dp"/>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>


</ScrollView>