<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">
    <ImageView
        android:id="@+id/iv_barang_gambar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1"
        android:src="@drawable/bg_auth_jpg"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_barang_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Sayur"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_barang_harga_stok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 2000 /Kg"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_btn_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:background="@color/hijau"
                android:textColor="#ffff"
                android:padding="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:background="#ffff"
                android:textColor="@color/hijau"
                android:padding="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:background="@color/hijau"
                android:textColor="#ffff"
                android:padding="@dimen/dp_10"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>