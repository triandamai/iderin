<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="#ffff"
    android:weightSum="4">

    <ImageView
        android:id="@+id/iv_barang_gambar"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:src="@drawable/bg_auth_jpg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_barang_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Sayur"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_barang_harga_stok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 2000 /Kg"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_lihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/sp_16"
            android:background="@drawable/button_primary"
            android:layout_margin="5dp"
            android:textColor="#ffff"
            android:text="Pilih" />
    </LinearLayout>

</LinearLayout>